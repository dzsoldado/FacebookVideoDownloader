{
  "manifest_version": 2,
  "name": "Facebook Video Downloader",
  "version": "0.1",
  "icons": {
    "128": "icons/icon128.png",
    "16": "icons/icon16.png"
  },
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_popup": "popup/popup.html"
  },
  "content_scripts":[
    {
      "matches": ["https://m.facebook.com/*"],
      "js": ["download.js"]
    }
    
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "downloads",
    "tabs"
  ]
}